{
  "pageConfig": {
    "title": {
      "purchase": "Purchase Order",
      "sales": "Sales Order"
    },
    "description": "Manage and track your orders with table and kanban views",
    "defaultView": "table",
    "currency": "TK",
    "dateFormat": "MMMM DD, YYYY"
  },

  "headerActions": {
    "primary": [
      {
        "id": "add_dropdown",
        "type": "dropdown",
        "label": "Add {{pageTitle}}",
        "icon": "Plus",
       
        "items": [
          {
            "id": "add_new",
            "label": "Add New {{pageTitle}}",
            "action": "navigate",
            "route": "/{{module}}/new",
            "icon": "Plus"
          },
          {
            "id": "import",
            "label": "Import from File",
            "action": "import",
            "icon": "Upload"
          },
          {
            "id": "quick_add",
            "label": "Quick Add",
            "action": "quick_add",
            "icon": "Zap"
          }
        ]
      }
    ],
    "secondary": [
      {
        "id": "more",
        "type": "icon-button",
        "icon": "MoreVertical",
        "tooltip": "More options",
        "items": [
          {
            "id": "export",
            "label": "Export Data",
            "action": "export",
            "icon": "Download"
          },
          {
            "id": "settings",
            "label": "Table Settings",
            "action": "settings",
            "icon": "Settings"
          }
        ]
      },
      {
        "id": "grid",
        "type": "icon-button",
        "icon": "Grid3x3",
        "tooltip": "Grid Options",
        "action": "grid_options"
      }
    ]
  },
  "statusSummary": {
    "enabled": true,
    "cards": [
      {
        "key": "Open",
        "label": "Open",
        "description": "Orders that are open and pending",
        "color": {
          "primary": "blue",
          "bg": "bg-blue-50",
          "border": "border-blue-500",
          "text": "text-blue-600",
          "ring": "ring-blue-500",
          "dot": "bg-blue-500"
        },
        "showCount": true,
        "showTotal": true,
        "clickable": true
      },
      {
        "key": "In Process",
        "label": "In Process",
        "description": "Orders currently being processed",
        "color": {
          "primary": "orange",
          "bg": "bg-yellow-50",
          "border": "border-yellow-500",
          "text": "text-yellow-600",
          "ring": "ring-yellow-500",
          "dot": "bg-orange-500"
        },
        "showCount": true,
        "showTotal": true,
        "clickable": true
      },
      {
        "key": "Completed",
        "label": "Completed",
        "description": "Orders that have been completed",
        "color": {
          "primary": "green",
          "bg": "bg-green-50",
          "border": "border-green-500",
          "text": "text-green-600",
          "ring": "ring-green-500",
          "dot": "bg-green-500"
        },
        "showCount": true,
        "showTotal": true,
        "clickable": true
      }
    ]
  },
  "tableConfig": {
    "rowSelection": {
      "enabled": true,
      "type": "checkbox",
      "selectAll": true
    },
    "columns": [
      {
        "key": "orderDate",
        "label": "Order Date",
        "type": "date",
        "sortable": true,
        "filterable": true,
        "width": "150px",
        "format": "MMMM DD, YYYY"
      },
      {
        "key": "customerName",
        "label": "Customer Name",
        "type": "text",
        "sortable": true,
        "filterable": true,
        "searchable": true,
        "width": "200px"
      },
      {
        "key": "orderNo",
        "label": "Order No",
        "type": "text",
        "sortable": true,
        "filterable": true,
        "searchable": true,
        "width": "150px"
      },
      {
        "key": "supplier",
        "label": "Supplier",
        "type": "text",
        "sortable": true,
        "filterable": true,
        "searchable": true,
        "width": "180px"
      },
      {
        "key": "location",
        "label": "Location",
        "type": "text",
        "sortable": true,
        "filterable": true,
        "width": "150px"
      },
      {
        "key": "totalTax",
        "label": "Total Tax",
        "type": "currency",
        "sortable": true,
        "filterable": true,
        "width": "120px",
        "currency": "TK",
        "decimals": 2
      },
      {
        "key": "totalAmount",
        "label": "Total Amount",
        "type": "currency",
        "sortable": true,
        "filterable": true,
        "width": "150px",
        "currency": "TK",
        "decimals": 2
      },
      {
        "key": "status",
        "label": "Status",
        "type": "badge",
        "sortable": true,
        "filterable": true,
        "width": "120px",
        "colors": {
          "Open": {
            "bg": "bg-blue-100",
            "text": "text-blue-800",
            "dot": "bg-blue-500"
          },
          "In Process": {
            "bg": "bg-yellow-100",
            "text": "text-yellow-800",
            "dot": "bg-orange-500"
          },
          "Completed": {
            "bg": "bg-green-100",
            "text": "text-green-800",
            "dot": "bg-green-500"
          }
        }
      }
    ],
    "actions": {
      "enabled": true,
      "width": "120px",
      "items": [
        {
          "key": "view",
          "label": "View",
          "icon": "Eye",
          "action": "navigate",
          "route": "/{{module}}/view/{{id}}",
          "color": "blue",
          "tooltip": "View details"
        },
        {
          "key": "edit",
          "label": "Edit",
          "icon": "Edit",
          "action": "navigate",
          "route": "/{{module}}/edit/{{id}}",
          "color": "green",
          "tooltip": "Edit order"
        },
        {
          "key": "delete",
          "label": "Delete",
          "icon": "Trash2",
          "action": "delete",
          "color": "red",
          "tooltip": "Delete order",
          "confirm": {
            "enabled": true,
            "message": "Are you sure you want to delete this order?"
          }
        },
        {
          "key": "more",
          "label": "More",
          "icon": "MoreVertical",
          "type": "dropdown",
          "color": "gray",
          "tooltip": "More options",
          "items": [
            {
              "key": "duplicate",
              "label": "Duplicate",
              "action": "duplicate",
              "icon": "Copy"
            },
            {
              "key": "print",
              "label": "Print",
              "action": "print",
              "icon": "Printer"
            },
            {
              "key": "export",
              "label": "Export",
              "action": "export",
              "icon": "Download"
            }
          ]
        }
      ]
    }
  },
  "kanbanConfig": {
    "columns": [
      {
        "key": "Open",
        "label": "Open",
        "color": "blue",
        "borderColor": "border-blue-500",
        "badgeColor": "bg-blue-100 text-blue-700",
        "avatarColor": "bg-blue-100 text-blue-700"
      },
      {
        "key": "In Process",
        "label": "In Process",
        "color": "orange",
        "borderColor": "border-orange-500",
        "badgeColor": "bg-orange-100 text-orange-700",
        "avatarColor": "bg-orange-100 text-orange-700"
      },
      {
        "key": "Completed",
        "label": "Completed",
        "color": "green",
        "borderColor": "border-green-500",
        "badgeColor": "bg-green-100 text-green-700",
        "avatarColor": "bg-green-100 text-green-700"
      }
    ],
    "card": {
      "title": "customerName",
      "subtitle": "orderNo",
      "avatar": {
        "enabled": true,
        "source": "customerName",
        "type": "initials"
      },
      "fields": [
        {
          "key": "orderDate",
          "label": "Date",
          "type": "date"
        },
        {
          "key": "supplier",
          "label": "Supplier",
          "type": "text"
        },
        {
          "key": "orderNo",
          "label": "Order No.",
          "type": "text"
        },
        {
          "key": "totalAmount",
          "label": "Value",
          "type": "currency",
          "currency": "TK",
          "highlight": true
        }
      ],
      "actions": {
        "enabled": true,
        "items": [
          {
            "key": "view",
            "label": "View",
            "action": "navigate",
            "route": "/{{module}}/view/{{id}}"
          },
          {
            "key": "edit",
            "label": "Edit",
            "action": "navigate",
            "route": "/{{module}}/edit/{{id}}"
          },
          {
            "key": "delete",
            "label": "Delete",
            "action": "delete",
            "confirm": true
          }
        ]
      }
    }
  },
  "filters": {
    "globalSearch": {
      "enabled": true,
      "placeholder": "Search orders...",
      "fields": ["customerName", "orderNo", "supplier", "location"],
      "icon": "Search"
    },
    "statusFilter": {
      "enabled": true,
      "field": "status",
      "type": "single",
      "clearable": true
    },
    "quickFilters": [
      {
        "key": "list_selector",
        "label": "List Selector",
        "type": "select",
        "options": [
          {
            "value": "all",
            "label": "List for Sim"
          },
          {
            "value": "recent",
            "label": "All Records"
          },
          {
            "value": "archived",
            "label": "Recent Orders"
          }
        ],
        "defaultValue": "all"
      }
    ]
  },
  "controls": {
    "viewToggle": {
      "enabled": true,
      "position": "left"
    },
    "search": {
      "enabled": true,
      "expandable": true,
      "position": "right"
    },
    "refresh": {
      "enabled": true,
      "position": "right",
      "tooltip": "Refresh data"
    },
    "gridOptions": {
      "enabled": true,
      "position": "right",
      "tooltip": "View options"
    }
  },
  "bulkActions": {
    "enabled": true,
    "actions": [
      {
        "key": "export_selected",
        "label": "Export Selected",
        "icon": "Download",
        "action": "export"
      },
      {
        "key": "delete_selected",
        "label": "Delete Selected",
        "icon": "Trash2",
        "action": "delete",
        "confirm": {
          "enabled": true,
          "message": "Are you sure you want to delete {{count}} selected items?"
        }
      },
      {
        "key": "change_status",
        "label": "Change Status",
        "icon": "Edit",
        "action": "change_status",
        "options": ["Open", "In Process", "Completed"]
      }
    ]
  },
  "pagination": {
    "enabled": true,
    "pageSize": 10,
    "pageSizeOptions": [5, 10, 20, 50, 100],
    "showTotal": true,
    "showPageInfo": true
  },
  "emptyState": {
    "table": {
      "message": "No orders found",
      "description": "Try adjusting your search or filter criteria",
      "icon": "Package",
      "action": {
        "label": "Add First Order",
        "route": "/{{module}}/new"
      }
    },
    "kanban": {
      "message": "No items",
      "description": "No orders in this status"
    }
  },
